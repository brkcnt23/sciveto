<security>
  <authentication>
    <methods>
      <jwt>true</jwt>
      <oauth2>Google, Microsoft, GitHub</oauth2>
      <saml>true</saml>
      <two_factor>TOTP, SMS, Email</two_factor>
      <biometric>FaceID, TouchID, WebAuthn</biometric>
    </methods>
    <session_management>
      <timeout>30min</timeout>
      <refresh_token>7days</refresh_token>
      <concurrent_sessions>3</concurrent_sessions>
      <device_tracking>true</device_tracking>
    </session_management>
  </authentication>
  
  <authorization>
    <rbac>true</rbac>
    <abac>true</abac>
    <permissions>
      <granular>create, read, update, delete, export, import</granular>
      <hierarchical>true</hierarchical>
      <dynamic>true</dynamic>
      <field_level>true</field_level>
    </permissions>
  </authorization>
  
  <data_protection>
    <encryption>
      <at_rest>AES-256</at_rest>
      <in_transit>TLS 1.3</in_transit>
      <field_level>true</field_level>
    </encryption>
    <pii_handling>
      <masking>true</masking>
      <anonymization>true</anonymization>
      <right_to_deletion>true</right_to_deletion>
    </pii_handling>
    <backup>
      <frequency>daily</frequency>
      <retention>30days</retention>
      <encryption>true</encryption>
      <offsite>true</offsite>
    </backup>
  </data_protection>
  
  <compliance>
    <standards>GDPR, CCPA, SOC2, ISO27001</standards>
    <audit_logging>
      <user_actions>true</user_actions>
      <system_events>true</system_events>
      <data_access>true</data_access>
      <configuration_changes>true</configuration_changes>
    </audit_logging>
  </compliance>
  
  <api_security>
    <rate_limiting>100req/min</rate_limiting>
    <api_keys>true</api_keys>
    <cors>configurable</cors>
    <csrf_protection>true</csrf_protection>
    <input_validation>true</input_validation>
    <sql_injection_prevention>true</sql_injection_prevention>
  </api_security>
</security>