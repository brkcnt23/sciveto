{
  "name": "@sciveto/database",
  "version": "1.0.0",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "prisma generate && tsc",
    "dev": "tsc --watch",
    "db:generate": "prisma generate",
    "db:push": "prisma db push",
    "db:migrate": "prisma migrate dev",
    "db:studio": "prisma studio",
    "db:seed": "tsx prisma/seed.ts",
    "db:seed-templates": "tsx prisma/seed-templates.ts",
    "db:seed-all": "npm run db:seed && npm run db:seed-templates",
    "setup:templates": "npm run db:migrate && npm run db:generate && npm run db:seed-templates",
    "clean": "rm -rf dist node_modules/.prisma",
    "prebuild": "prisma generate"
  },
  "dependencies": {
    "@prisma/client": "^6.11.1"
  },
  "devDependencies": {
    "@types/node": "^22.10.7",
    "prisma": "^6.11.1",
    "ts-node": "^10.9.2",
    "tsx": "^4.19.2",
    "typescript": "^5.8.3"
  }
}